{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.dev/schema/passportDraft.schema.json",
  "title": "Vehicle Passport Draft",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "vin",
    "lot_id",
    "provenance"
  ],
  "properties": {
    "vin": {
      "type": "string",
      "pattern": "^[A-HJ-NPR-Z0-9]{17}$",
      "description": "VIN (no I,O,Q)"
    },
    "lot_id": {
      "type": "string",
      "minLength": 1
    },
    "dekra": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "report_id": {
          "type": "string"
        },
        "inspection_ts": {
          "type": "string",
          "format": "date-time"
        },
        "site": {
          "type": "string"
        }
      }
    },
    "odometer": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "km": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0
        },
        "source": {
          "type": "string",
          "enum": [
            "DEKRA",
            "photo_only",
            "n/a"
          ]
        }
      }
    },
    "tyres_mm": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fl": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 20
        },
        "fr": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 20
        },
        "rl": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 20
        },
        "rr": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 20
        }
      }
    },
    "brakes": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "front_pct": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 100
        },
        "rear_pct": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 100
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "dtc": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "green",
            "amber",
            "red",
            "n/a"
          ]
        },
        "codes": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "code"
            ],
            "properties": {
              "code": {
                "type": "string",
                "pattern": "^[PCBU][0-9]{4}$"
              },
              "desc": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "remarks": {
      "type": "string"
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "captured_by",
        "ts"
      ],
      "properties": {
        "captured_by": {
          "type": "string"
        },
        "site": {
          "type": "string"
        },
        "ts": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}